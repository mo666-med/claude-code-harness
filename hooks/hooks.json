{
  "$schema": "https://json.schemastore.org/claude-code-hooks.json",
  "description": "cursor-cc-plugins: 2エージェントワークフロー用フック",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/session-init.sh",
            "statusMessage": "セッション初期化中..."
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/auto-cleanup-hook.sh",
            "statusMessage": "ファイルサイズチェック中..."
          }
        ]
      }
    ]
  }
}
