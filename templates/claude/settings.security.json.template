{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "mcp__cclsp__*"
    ],
    "deny": [
      "Bash(sudo:*)",
      "Bash(psql:*)",
      "Bash(mysql:*)",
      "Bash(mongod:*)",
      "Bash(mongo:*)",
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(**/*.pem)",
      "Read(**/*.key)",
      "Read(**/*id_rsa*)",
      "Read(**/*id_ed25519*)",
      "Read(**/.ssh/**)"
    ],
    "ask": [
      "Bash(rm:*)",
      "Bash(git push:*)",
      "Bash(git reset:*)",
      "Bash(git rebase:*)",
      "Bash(git merge:*)"
    ]
  },
  "mcpServers": {
    "cclsp": {
      "command": "npx",
      "args": ["@ktnyt/cclsp"],
      "description": "LSP integration for code intelligence (go-to-definition, find-references, diagnostics, rename)"
    }
  }
}

